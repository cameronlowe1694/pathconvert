{
  "name": "pathconvert",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "server",
      "client",
      "extensions/*"
    ]
  },
  "scripts": {
    "setup": "cd server && npm ci && npx prisma generate && npx prisma db push --accept-data-loss",
    "build": "cd client && npm ci && npm run build",
    "start": "cd server && npm start",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "docker-start": "npm run setup && npm run build && npm run start",
    "prisma": "cd server && prisma",
    "deploy": "shopify app deploy"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
